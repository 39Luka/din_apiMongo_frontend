{
  "name": "bakery",
  "description": "Aplicación de panadería artesanal con React y Electron",
  "author": "Bakery++ Team",
  "private": true,
  "version": "0.0.0",
  "main": "main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron-dev": "cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "electron-pack": "electron-builder",
    "clean": "rmdir /s /q dist-electron || rm -rf dist-electron"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.11.0",
    "recharts": "^3.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^26.6.10",
    "electron-builder": "^26.4.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "prop-types": "^15.8.1",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.bakery.app",
    "productName": "Bakery++",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.cjs",
      "preload.cjs",
      "dist/**",
      "package.json"
    ],
    "win": {
      "target": [
        "portable"
      ]
    }
  }
}